import lang.c

import doze.v1

c.executable {
    do parse.o main.o >>> ykz
}

c.objectFile {
    do parse.h parse.c > parse.o
    do parse.h main.c  > main.o
}

c.yacc {
    do parse.y > parse.c parse.h
}

do report {
    cmd /usr/bin/profiler {
        do ykz > report.prof
    }
    cmd /usr/bin/prof2pdf {
        do report.prof > report.pdf
    }
}